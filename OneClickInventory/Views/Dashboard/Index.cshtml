
@{
    ViewData["Title"] = "Dashboard Main";
}




<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fa fa-pie-chart"></i> Products</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="row mb-4">
                    <div class="d-flex flex-row widget summery product">
                    <i class="fa-solid fa-sigma fa-2xl"></i>
                </div>
                <div class="d-flex flex-column m-auto py-3">
                    <span class="lead">Total Catagory</span>
                    <h1 class="display-6 fw-bold">@ViewBag.ProductTypeCount</h1>
                </div>
                </div>
                
                <div class="d-flex flex-row widget summery product">
                    <i class="fa-solid fa-sigma fa-2xl"></i>
                </div>
                <div class="d-flex flex-column m-auto py-3">
                    <span class="lead">Total Product</span>
                    <h1 class="display-6 fw-bold">@ViewBag.ProductTypeCount</h1>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>



